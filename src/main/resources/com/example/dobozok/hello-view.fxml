<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dobozok.HelloController">
   <children>
      <Pane fx:id="Panel" prefHeight="660.0" prefWidth="980.0" style="-fx-background-color: white; -fx-border-color: grey;">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin></Pane>
      <VBox alignment="TOP_CENTER">
         <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@boxopen.png" />
            </image></ImageView>
      
          <Label fx:id="openDb" text="0 db">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Label>
         <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@box.png" />
            </image></ImageView>
         <Label fx:id="closedDb" alignment="CENTER" text="0 db">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Label>
         <ImageView fx:id="Arrow" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@arrow.png" />
            </image>
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
         </ImageView>
         <Label maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
          <Button onAction="#onRandomClick" text="Random" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
